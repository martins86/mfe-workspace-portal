{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": true,
    "defaultCollection": "@angular-eslint/schematics"
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "portal": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/portal",
      "sourceRoot": "projects/portal/src",
      "prefix": "mfe",
      "architect": {
        "build": {
          "builder": "ngx-build-plus:browser",
          "options": {
            "outputPath": "dist/portal",
            "index": "projects/portal/src/index.html",
            "main": "projects/portal/src/main.ts",
            "polyfills": "projects/portal/src/polyfills.ts",
            "tsConfig": "projects/portal/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/portal/src/favicon.ico",
              "projects/portal/src/assets"
            ],
            "styles": ["projects/portal/src/styles.scss"],
            "scripts": [],
            "extraWebpackConfig": "projects/portal/webpack.config.js",
            "commonChunk": false
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/portal/src/environments/environment.ts",
                  "with": "projects/portal/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "extraWebpackConfig": "projects/portal/webpack.prod.config.js"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "portal:build:production",
              "extraWebpackConfig": "projects/portal/webpack.prod.config.js"
            },
            "development": {
              "browserTarget": "portal:build:development"
            }
          },
          "defaultConfiguration": "development",
          "options": {
            "port": 5000,
            "extraWebpackConfig": "projects/portal/webpack.config.js"
          }
        },
        "extract-i18n": {
          "builder": "ngx-build-plus:extract-i18n",
          "options": {
            "browserTarget": "portal:build",
            "extraWebpackConfig": "projects/portal/webpack.config.js"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/portal/src/test.ts",
            "polyfills": "projects/portal/src/polyfills.ts",
            "tsConfig": "projects/portal/tsconfig.spec.json",
            "karmaConfig": "projects/portal/karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/portal/src/favicon.ico",
              "projects/portal/src/assets"
            ],
            "styles": ["projects/portal/src/styles.scss"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/portal/**/*.ts",
              "projects/portal/**/*.html"
            ]
          }
        }
      }
    },
    "shared-lib": {
      "projectType": "library",
      "root": "projects/shared-lib",
      "sourceRoot": "projects/shared-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/shared-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/shared-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/shared-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/shared-lib/src/test.ts",
            "tsConfig": "projects/shared-lib/tsconfig.spec.json",
            "karmaConfig": "projects/shared-lib/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/shared-lib/**/*.ts",
              "projects/shared-lib/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "portal"
}
